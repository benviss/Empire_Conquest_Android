<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/screen_game">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/risk_map"
                    android:layout_alignParentTop="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/button_alaska"
                    android:onClick="onTerritorySelected"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/troops_alaska"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="70dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/button_nwTerritory"
                    android:onClick="onTerritorySelected"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="75dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/troops_nwterritory"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="75dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:onClick="onTerritorySelected"
                    android:id="@+id/button_alberta"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/troops_alberta"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="100dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/button_greenland"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="75dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/troops_greenland"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="60dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/button_ontario"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="100dp"
                    android:singleLine="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/troops_ontario"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="100dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/button_quebec"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/troops_quebec"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="100dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/button_westernUs"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="75dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/troops_westernus"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="85dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/button_easternUs"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="45dp"
                    android:layout_marginLeft="125dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/troops_easternus"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="45dp"
                    android:layout_marginLeft="140dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/button_centralAmerica"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="85dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/troops_centralAmerica"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="100dp" />


        </FrameLayout>

    <LinearLayout android:id="@+id/screen_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Please Wait" />
    </LinearLayout>
</FrameLayout>
