<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/electrical_arc_preview">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screen_sign_in">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/button_sign_in"
            android:layout_gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screen_main">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conquer"
            android:id="@+id/button_start_game"
            android:layout_centerInParent="true"
            android:layout_marginLeft="500dp"
            android:layout_marginTop="500dp" />
    </RelativeLayout>

    <LinearLayout android:id="@+id/screen_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Please Wait" />
    </LinearLayout>

    <LinearLayout android:id="@+id/invitation_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView android:id="@+id/incoming_invitation_text" android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button android:id="@+id/button_accept_popup_invitation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Accept Invite" />
    </LinearLayout>

</FrameLayout>
